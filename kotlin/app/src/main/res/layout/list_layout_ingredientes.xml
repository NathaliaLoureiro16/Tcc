<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview_child="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_ingredientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="3dp"
    cardview_child:cardBackgroundColor="#ffffff"
    cardview_child:cardCornerRadius="2dp"
    cardview_child:cardElevation="3dp"
    cardview_child:contentPadding="2dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/ingredient_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="5sp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/mycheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:button="@drawable/custom_checkbox_theme"
        android:checked="false" />


</android.support.v7.widget.CardView>


