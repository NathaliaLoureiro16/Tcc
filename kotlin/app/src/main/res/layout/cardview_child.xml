<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview_child="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_child"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="3dp"
    cardview_child:cardBackgroundColor="#ffffff"
    cardview_child:cardCornerRadius="2dp"
    cardview_child:cardElevation="3dp"
    cardview_child:contentPadding="2dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25sp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/myCheckbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="355dp"
        android:checked="false"
        android:padding="5dp"
        android:button="@drawable/custom_checkbox_theme"/>

</android.support.v7.widget.CardView>